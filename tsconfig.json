{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/esm",
    "moduleResolution": "Node",
    "declaration": true,
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["./src/*"]
}
